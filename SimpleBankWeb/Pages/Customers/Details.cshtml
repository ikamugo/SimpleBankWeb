@page
@model SimpleBankWeb.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.DateOfBirth)
        </dd>
    </dl>
        </div>
        <div class="col-6">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@transaction.Timestamp</td>
                            <td>@transaction.Amount.ToString("#,###")</td>
                            <td>@transaction.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Customer?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
